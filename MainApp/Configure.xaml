<Window x:Class="MainApp.ConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Storage Pool" Height="300" Width="300">
    <Grid>
        <Button Content="Create" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.056,-0.099" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="0,26,0,0" TextWrapping="Wrap" Text="Storage_Pool_Name" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
